<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ids.residentialmanagementsystem">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomeRegistration"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserRegistration"
            android:label="@string/title_activity_user_registration"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegistrationConfirmation"
            android:label="@string/title_activity_registration_confirmation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AccessCodeConfirmation"
            android:label="@string/title_activity_access_code_confirmation"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>